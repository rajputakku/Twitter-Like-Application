<p id="notice"><%= notice %></p>

<h1>Draft Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @posts.present? %>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.body %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Publish', publish_post_path(post) %></td>
      </tr>
    <% end %>
    <% else %>
    <h4>You don't have any draft post.</h4>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back', posts_path %>
